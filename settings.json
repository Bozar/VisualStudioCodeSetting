{
    // =========================================================================
    // List Of Extensions
    // =========================================================================
    /**
     * Local extensions.
     *
     * albert.tabout
     * alefragnani.bookmarks
     * donjayamanne.githistory
     * ms-vscode-remote.remote-ssh
     * ms-vscode-remote.remote-ssh-edit
     * ms-vscode.vs-keybindings
     * streetsidesoftware.code-spell-checker
     * throvn.nand2tetris
     * tomsaunders.vscode-workspace-explorer
     *
     * Remote extensions.
     *
     * ms-python.python
     *
     */
    // =========================================================================
    // Extension Settings
    // =========================================================================
    // streetsidesoftware.code-spell-checker.
    "cSpell.allowCompoundWords": true,
    "cSpell.logLevel": "Warning",
    "cSpell.showStatus": false,
    "cSpell.enableFiletypes": [
        "!c",
        "!cpp",
        "!csharp",
        "!go",
        "!haskell",
        "!java",
        "!javascript",
        "!php",
        "!python",
        "!rust",
        "!typescript",
    ],
    // tomsaunders.vscode-workspace-explorer.
    "workspaceExplorer.workspaceStorageDirectory": "vscWorkspace",
    // =========================================================================
    // Language Settings
    // =========================================================================
    // Markdown.
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.occurrencesHighlight": false,
        "files.insertFinalNewline": true,
    },
    // Python.
    /**
     * https://github.com/MicrosoftDocs/intellicode/issues/69
     * https://stackoverflow.com/questions/53939751/pylint-unresolved-import-error-in-visual-studio-code
     * Add to workspace setting:
     * "python.autoComplete.extraPaths": []
     */
    // "python.jediEnabled": false,
    // "python.analysis.logLevel": "Warning",
    // =========================================================================
    // Editor Settings
    // =========================================================================
    // Color theme.
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.tokenColorCustomizations": {
        "[Visual Studio Dark]": {
            "strings": "#b5ce9f",
            "numbers": "#ce9178",
        }
    },
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "editor.foreground": "#999999",
            "statusBar.background": "#3C3C3C",
            // "editor.lineHighlightBackground": "#3C3C3C",
        }
    },
    // Cursor.
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    // Editor: core section.
    "editor.minimap.enabled": false,
    "editor.showFoldingControls": "always",
    "editor.wrappingStrategy": "advanced",
    "editor.rulers": [
        80
    ],
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?，。《》？、；‘’：“”！…（）—【】",
    // "editor.scrollBeyondLastLine": false,
    "files.trimTrailingWhitespace": true,
    // Editor: header.
    "breadcrumbs.filePath": "last",
    "breadcrumbs.symbolSortOrder": "name",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.editor.openPositioning": "last",
    // Extension.
    "extensions.ignoreRecommendations": true,
    // Font.
    "editor.fontFamily": "'Fira Code', Consolas, 'Microsoft YaHei', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "markdown.preview.fontSize": 16,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "window.zoomLevel": 2.5,
    // Git.
    "git.autofetch": true,
    "git.autofetchPeriod": 900,
    "git.autoStash": true,
    "git.branchWhitespaceChar": "_",
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    // Icon.
    "workbench.iconTheme": null,
    "workbench.editor.showIcons": false,
    "breadcrumbs.icons": false,
    // Saving.
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
    },
    // Terminal.
    "terminal.integrated.copyOnSelection": true,
    // Window.
    "window.restoreFullscreen": true,
    "window.menuBarVisibility": "hidden",
    "workbench.sideBar.location": "right",
    "window.openWithoutArgumentsInNewWindow": "off",
}