{
    // =========================================================================
    // List Of Extensions
    // =========================================================================
    /**
     * Local extensions.
     *
     * albert.tabout
     * alefragnani.bookmarks
     * coenraads.bracket-pair-colorizer-2
     * donjayamanne.githistory
     * geequlim.godot-tools
     * ms-vscode-remote.remote-ssh
     * ms-vscode-remote.remote-ssh-edit
     * ms-vscode.vs-keybindings
     * sadesyllas.vscode-workspace-switcher
     * throvn.nand2tetris
     *
     * Remote extensions.
     *
     * ms-python.python
     *
     */
    // =========================================================================
    // Extension Settings
    // =========================================================================
    // alefragnani.bookmarks
    "bookmarks.sideBar.expanded": true,
    // coenraads.bracket-pair-colorizer-2
    "bracket-pair-colorizer-2.colors": [
        "LightGrey",
        "YellowGreen",
        "GoldenRod",
    ],
    // donjayamanne.githistory
    "gitHistory.showEditorTitleMenuBarIcons": false,
    "gitHistory.showFileHistorySplit": false,
    // sadesyllas.vscode-workspace-switcher
    "vscodeWorkspaceSwitcher.paths": [
        "~/vscWorkspace",
    ],
    // =========================================================================
    // Language Settings
    // =========================================================================
    // Godot script.
    "[gdscript]": {
        "files.insertFinalNewline": true,
    },
    // Markdown.
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.occurrencesHighlight": false,
        "files.insertFinalNewline": true,
    },
    // Python.
    /**
     * https://github.com/MicrosoftDocs/intellicode/issues/69
     * https://stackoverflow.com/questions/53939751/pylint-unresolved-import-error-in-visual-studio-code
     * Add to workspace setting:
     * "python.autoComplete.extraPaths": []
     */
    // "python.jediEnabled": false,
    // "python.analysis.logLevel": "Warning",
    // =========================================================================
    // Editor Settings
    // =========================================================================
    // Color theme.
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.tokenColorCustomizations": {
        "[Visual Studio Dark]": {
            "strings": "#b5ce9f",
            "numbers": "#ce9178",
        }
    },
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "editor.foreground": "#999999",
            "statusBar.background": "#3C3C3C",
            // "editor.lineHighlightBackground": "#3C3C3C",
        }
    },
    // Cursor.
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    // Editor: core section.
    "editor.minimap.enabled": false,
    "editor.showFoldingControls": "always",
    "editor.wrappingStrategy": "advanced",
    "editor.rulers": [
        80
    ],
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?，。《》？、；‘’：“”！…（）—【】",
    // "editor.scrollBeyondLastLine": false,
    "files.trimTrailingWhitespace": true,
    "editor.copyWithSyntaxHighlighting": false,
    // Editor: diff.
    "diffEditor.ignoreTrimWhitespace": false,
    // Editor: header.
    "breadcrumbs.filePath": "last",
    "breadcrumbs.symbolSortOrder": "name",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.editor.openPositioning": "last",
    "workbench.editor.untitled.labelFormat": "name",
    // "workbench.editor.limit.enabled": true,
    // "workbench.editor.limit.value": 6,
    // Extension.
    "extensions.ignoreRecommendations": true,
    // Font.
    "editor.fontFamily": "'Fira Code', Consolas, 'Microsoft YaHei', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "markdown.preview.fontSize": 16,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "window.zoomLevel": 2.5,
    // Git.
    "git.autofetch": true,
    "git.autofetchPeriod": 900,
    "git.autoStash": true,
    "git.branchWhitespaceChar": "_",
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.inputValidationSubjectLength": null,
    // Icon.
    "workbench.iconTheme": null,
    "workbench.editor.showIcons": false,
    "breadcrumbs.icons": false,
    // Saving.
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
    },
    // Terminal.
    "terminal.integrated.copyOnSelection": true,
    // Window.
    "window.restoreFullscreen": true,
    "window.menuBarVisibility": "hidden",
    "workbench.sideBar.location": "right",
    "window.openWithoutArgumentsInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "window.restoreWindows": "one",
    "window.newWindowDimensions": "inherit",
}