{
    /**
     * Local extensions.
     *
     * albert.tabout
     * alefragnani.bookmarks
     * ms-vscode-remote.remote-ssh
     * ms-vscode-remote.remote-ssh-edit
     * ms-vscode.vs-keybindings
     * throvn.nand2tetris
     * tomsaunders.vscode-workspace-explorer
     *
     * Remote extensions.
     *
     * ms-python.python
     *
     */
    // Color theme.
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.tokenColorCustomizations": {
        "[Visual Studio Dark]": {
            "strings": "#b5ce9f",
            "numbers": "#ce9178",
        }
    },
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "editor.foreground": "#999999",
            "statusBar.background": "#3C3C3C",
            // "editor.lineHighlightBackground": "#3C3C3C",
        }
    },
    // Cursor.
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    // Editor: core section.
    "editor.minimap.enabled": false,
    "editor.showFoldingControls": "always",
    "editor.wrappingStrategy": "advanced",
    "editor.rulers": [
        80
    ],
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?，。《》？、；‘’：“”！…（）—【】",
    // "editor.scrollBeyondLastLine": false,
    "files.trimTrailingWhitespace": true,
    // Editor: header.
    "breadcrumbs.filePath": "last",
    "breadcrumbs.symbolSortOrder": "name",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.editor.openPositioning": "last",
    // Extension.
    "extensions.ignoreRecommendations": true,
    // Exntension: tomsaunders.vscode-workspace-explorer.
    "workspaceExplorer.workspaceStorageDirectory": "vscWorkspace",
    // Font.
    "editor.fontFamily": "'Fira Code', Consolas, 'Microsoft YaHei', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "markdown.preview.fontSize": 16,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "window.zoomLevel": 2.5,
    // Git.
    "git.enableSmartCommit": true,
    // Icon.
    "workbench.iconTheme": null,
    "workbench.editor.showIcons": false,
    "breadcrumbs.icons": false,
    // Language: Markdown.
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.occurrencesHighlight": false,
        "files.insertFinalNewline": true,
    },
    // Language: Python.
    /**
     * https://github.com/MicrosoftDocs/intellicode/issues/69
     * https://stackoverflow.com/questions/53939751/pylint-unresolved-import-error-in-visual-studio-code
     * Add to workspace setting:
     * "python.autoComplete.extraPaths": []
     */
    // "python.jediEnabled": false,
    // "python.analysis.logLevel": "Warning",
    // Saving.
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
    },
    // Terminal.
    "terminal.integrated.copyOnSelection": true,
    // Window.
    "window.restoreFullscreen": true,
    "window.menuBarVisibility": "hidden",
    "workbench.sideBar.location": "right",
    "window.openWithoutArgumentsInNewWindow": "off",
}